<UserControl x:Class="DemoApp.Gallery.Views.GalleryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoApp.Gallery.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFEAC9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#D83A56" Padding="20">
            <TextBlock Text="Gallery View" FontSize="32" Foreground="White"/>
        </Border>

        <Border Grid.Row="1" Padding="20">
            <Grid x:Name="detailsGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Text="{Binding ImageUrl}" Padding="10"/>
                    <Button Grid.Column="1" Content="Submit" Command="{Binding SubmitCommand}" Padding="20,10"/>
                </Grid>

                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding LoadingImage, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Value="{Binding ProgressValue}" 
                                 Height="25" 
                                 Width="300" 
                                 Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding ProgressText}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Image Grid.Row="1" 
                       Source="{Binding DisplayImage}" 
                       Visibility="{Binding LoadingImage, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            </Grid>
        </Border>        
    </Grid>
</UserControl>
